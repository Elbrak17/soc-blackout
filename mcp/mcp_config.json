{
    "mcpServers": {
        "soc-blackout": {
            "command": "npx",
            "args": [
                "mcp-remote",
                "${KIBANA_URL}/api/agent_builder/mcp",
                "--header",
                "Authorization:${AUTH_HEADER}"
            ],
            "env": {
                "KIBANA_URL": "YOUR_KIBANA_URL_HERE",
                "AUTH_HEADER": "ApiKey YOUR_API_KEY_HERE"
            }
        }
    }
}